<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web com.Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web com.Application</display-name>
  
  	<!-- jersey start -->
	<servlet>
		<servlet-name>Jersey Web com.Application</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.com.Application</param-name>
			<param-value>RestApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey Web com.Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<!-- jersey end -->
	
</web-app>
